<Page x:Class="HraAF.Skore"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HraAF"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Skore">

    <Grid Background="#FF1D1D1D">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel x:Name="SkorePanel" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" Grid.Column="1" Grid.Row="1" />
        <Button x:Name="button" Content="EXIT" HorizontalAlignment="Center" Margin="0" Grid.Row="2" VerticalAlignment="Center" Width="76" Click="exit_Click"/>
        <Button x:Name="button2" Content="RETRY" Grid.Column="2" HorizontalAlignment="Center" Margin="0" Grid.Row="2" VerticalAlignment="Center" Width="75" Click="game_Click"/>
        <Label x:Name="label" Content="Tabulka rekordů" Grid.Column="1" Margin="0" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
    </Grid>
</Page>
